<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
  <RelativeLayout
  	android:layout_width="fill_parent"
  	android:layout_height="69dp"
  	android:id="@+id/search_flight_title_bar"
  	android:background="@drawable/title_bg"
  >
  	<ImageView
  		android:layout_width="86dp"
  		android:layout_height="37dp"
  		android:layout_alignParentLeft="true"
  		android:layout_marginLeft="5dp"
  		android:id="@+id/conf_button"
  		android:background="@drawable/conf_btn"
  		android:layout_centerVertical="true"
  	/>
  	<TextView
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:textSize="22dp"
  		android:layout_toRightOf="@id/conf_button"
  		android:layout_marginLeft="15dp"
  		android:layout_centerVertical="true"
  		android:id="@+id/user_info_view"
  		android:textColor="@color/white"
  	/>
  	<TextView
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:textSize="22dp"
  		android:layout_toRightOf="@id/user_info_view"
  		android:layout_marginLeft="15dp"
  		android:layout_centerVertical="true"
  		android:textColor="@color/white"
  		android:id="@+id/user_info_listnum"
  	/>
  	
  	<ImageView
	  	android:layout_width="33dp"
  		android:layout_height="36dp"
	  	android:id="@+id/help_button"
	  	android:layout_alignParentRight="true"
	  	android:layout_marginRight="10dp"
	  	android:background="@drawable/help_btn"
	  	android:layout_centerVertical="true"
	 />
  	<ImageView
	  	android:layout_width="76dp"
  		android:layout_height="37dp"
	  	android:id="@+id/add_button"
	  	android:layout_toLeftOf="@id/help_button"
	  	android:layout_marginRight="15dp"
	  	android:background="@drawable/add_btn"
	  	android:layout_centerVertical="true"
	 />
	 <ImageView
	  	android:layout_width="86dp"
  		android:layout_height="37dp"
	  	android:id="@+id/search_button"
	  	android:layout_toLeftOf="@id/add_button"
	  	android:background="@drawable/search_btn"
	  	android:layout_centerVertical="true"
	 />
  </RelativeLayout>
  <ListView
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:layout_below="@id/search_flight_title_bar"
  	android:id="@+id/serch_flight_body"
  	android:background="@color/white"
  />
</RelativeLayout>
