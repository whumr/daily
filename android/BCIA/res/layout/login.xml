<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="@drawable/login_bg_fit">
	
    
	<TextView 
		android:id="@+id/user_id_name" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/user_name" 
		android:textSize="26dp"
		android:layout_marginLeft="740dp"
		android:layout_marginTop="380dp"
		android:paddingTop="5dp"
		android:textColor="#000000"/>

	 <TextView
	     android:id="@+id/verson_name"
	     android:layout_width="180dp"
	     android:layout_height="50dp"
	     android:layout_alignParentRight="true"
	     android:layout_marginTop="235dp"
	     android:textColor="@color/black"
	     android:textSize="22dp" />
	 
	<EditText 
		android:id="@+id/user_id_namein" 
		android:layout_width="301dp" 
		android:layout_height="57dp" 
		android:layout_toRightOf="@+id/user_id_name"
		android:layout_alignTop="@+id/user_id_name" 
		android:singleLine="true"
		android:background="@drawable/login_edit"
		android:paddingLeft="5dp"
		android:textColor="#000000"
		/>
	<TextView 
		android:id="@+id/user_id_password" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_toRightOf="@+id/user_id_face"
		android:layout_below="@+id/user_id_name" 
		android:text="@string/user_password"
		android:textSize="26dp"
		android:layout_alignLeft="@+id/user_id_name" 
		android:layout_marginTop="50sp" 
		android:paddingTop="10dp"
		android:textColor="#000000"
		/>	
	<EditText 
		android:id="@+id/user_id_passwordin" 
		android:layout_width="301dp"
		android:layout_height="57dp" 
		android:layout_below="@+id/user_id_namein"
		android:layout_toRightOf="@+id/user_id_password" 
		android:layout_alignTop="@+id/user_id_password"
		android:singleLine="true" 
		android:layout_alignLeft="@+id/user_id_namein"
		android:background="@drawable/login_edit"
		android:paddingLeft="5dp"
		android:textColor="#000000"
		android:inputType="textPassword"
		/>
	<RelativeLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/user_id_password"
		android:layout_marginTop="70dp"
		android:layout_alignParentRight="true">
		<Button 
			android:id="@+id/user_clean" 
			android:layout_width="151dp"
			android:layout_height="51dp"
			android:layout_marginLeft="830dp"				 
			android:background="@drawable/clean_btn"/>
		<Button 
			android:id="@+id/user_confirm" 
			android:layout_width="151dp"
			android:layout_height="51dp"
			android:layout_toRightOf="@id/user_clean"
			android:layout_marginLeft="40dp"			
			android:background="@drawable/login_btn"/>	
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/login_ing"
			android:textSize="26dp"
			android:layout_below="@id/user_clean"
			android:layout_marginTop="10dp"
			android:textColor="#FF0000"
			android:layout_centerHorizontal="true"
			android:visibility="invisible"
			android:id="@+id/login_info"
		/>			
	</RelativeLayout>
		
</RelativeLayout>