<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="1261dp"
  android:layout_height="79dp"
  android:id="@+id/info_record_item"
  android:background="@drawable/deicing_item_green"
  >
	
	<ImageView 
		android:id="@+id/info_record_zone"
	  	android:layout_width="36dp"
	  	android:layout_height="37dp"
	  	android:padding="2dp"
	  	android:layout_marginBottom="48dp"
		/>
	<TextView
		android:id="@+id/info_record_num"
		android:textSize="24dp"
		android:layout_width="30dp"
	  	android:layout_height="wrap_content"
	  	android:layout_centerVertical="true"
	  	android:gravity="center_vertical"
	  	android:textColor="#000000"
	  	android:layout_toRightOf="@+id/info_record_zone"/>
	<CheckBox 
		android:id="@+id/info_record_confirm"
		android:layout_width="35dp"
  		android:layout_height="35dp"
  		android:background="@drawable/check_bg"
	  	android:layout_centerVertical="true"
	  	android:layout_toRightOf="@+id/info_record_num"
	  	android:layout_marginLeft="20dp"	
		/>
	<TextView 
		android:id="@+id/info_record_planeNo"
		android:layout_width="150dp"
	  	android:layout_height="wrap_content"
	  	android:textSize="30dp"
	  	android:layout_centerVertical="true"
	  	android:layout_marginLeft="80dp"
	  	android:textColor="@color/blue"
	  	android:layout_toRightOf="@+id/info_record_num"/>
	<TextView 
		android:id="@+id/info_record_flightNo"
		android:layout_width="150dp"
	  	android:layout_height="wrap_content"
	  	android:textSize="30dp"
	  	android:layout_centerVertical="true"  	
	  	android:layout_marginLeft="40dp"
	  	android:textColor="@color/black"
	  	android:layout_toRightOf="@+id/info_record_planeNo"/>
	<TextView 
		android:id="@+id/info_record_companyName" 
		android:layout_width="130dp"
	  	android:layout_height="wrap_content"
	  	android:textSize="30dp"
	  	android:layout_centerVertical="true"
	  	android:layout_marginLeft="40dp"
	  	android:textColor="@color/black"
	  	android:layout_toRightOf="@+id/info_record_flightNo"/>
	
	<TextView 
		android:id="@+id/info_record_time" 
		android:layout_width="150dp"
	  	android:layout_height="wrap_content"
	  	android:textSize="30dp"
	  	android:layout_centerVertical="true"
	  	android:textColor="@color/black"
	  	android:layout_toRightOf="@+id/info_record_companyName"
	  	android:text="(22)20:30"/>
		
	<RelativeLayout
		android:id="@+id/search_flight_item_state_zone"
	  	android:layout_width="420dp"
	  	android:layout_height="wrap_content"
	  	android:orientation="horizontal"
	  	android:layout_centerVertical="true"
	  	android:layout_alignParentRight="true"
		>
	<ImageView 
		android:id="@+id/info_record_state1" 
		android:layout_width="50dp"
  		android:layout_height="50dp"
  		android:layout_marginLeft="14dp"
  		android:layout_centerVertical="true"
		/>
	<ImageView 
		android:id="@+id/info_record_state2"
		android:layout_width="50dp"
  		android:layout_height="50dp"
  		android:layout_marginLeft="17dp"
  		android:layout_centerVertical="true"
  		android:layout_toRightOf="@+id/info_record_state1"
		/>	
	<ImageView 
		android:id="@+id/info_record_state3" 
		android:layout_width="50dp"
  		android:layout_height="50dp"
  		android:layout_marginLeft="18dp"
  		android:layout_centerVertical="true"
  		android:layout_toRightOf="@+id/info_record_state2"
		/>
	<ImageView 
		android:id="@+id/info_record_state4"
		android:layout_width="50dp"
  		android:layout_height="50dp"
  		android:layout_marginLeft="15dp"		
  		android:layout_centerVertical="true"
  		android:layout_toRightOf="@+id/info_record_state3"
		/>
	<TextView
		android:id="@+id/info_record_complete_pct"
		android:textColor="#000000"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="22dp"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/info_record_state4"
		android:textSize="24dp"
		/>		
	<Button
		android:id="@+id/info_record_messageIn"
		android:background="@drawable/edit_btn"
		android:layout_width="56dp"
  		android:layout_height="56dp"
  		android:layout_centerVertical="true"
  		android:layout_toRightOf="@+id/info_record_complete_pct"
  		android:layout_marginLeft="18dp"
		/>
	</RelativeLayout>	
</RelativeLayout>			